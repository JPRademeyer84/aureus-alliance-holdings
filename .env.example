# AUREUS ANGEL ALLIANCE - ENVIRONMENT CONFIGURATION
# Copy this file to .env and configure your settings
# IMPORTANT: Never commit .env files to version control
# SECURITY: Set file permissions to 600 (chmod 600 .env)

# Database Configuration
DB_HOST=localhost
DB_NAME=aureus_angels
DB_USER=root
DB_PASS=

# Application URLs
API_URL=http://localhost/aureus-angel-alliance/api
FRONTEND_URL=http://localhost:5173

# Security Configuration
APP_ENV=development
DEBUG=true
SESSION_SECRET=change_this_to_a_random_32_character_string

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_TIME_WINDOW=900

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://127.0.0.1:5173,http://127.0.0.1:5174

# Security Logging Configuration
SECURITY_LOG_FILE=true
SECURITY_LOG_DATABASE=true
SECURITY_ALERT_EMAIL=admin@yourdomain.com
SECURITY_ALERT_WEBHOOK=

# Data Encryption Configuration
DATA_ENCRYPTION_KEY=GENERATE_A_SECURE_256_BIT_KEY_HERE

# TLS/HTTPS Configuration
FORCE_HTTPS=false
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
CSP_ALLOWED_ORIGINS=localhost:5173 localhost:5174 127.0.0.1:5173 127.0.0.1:5174

# Encryption Keys (Generate random keys for production)
WALLET_ENCRYPTION_KEY=change_this_to_a_random_encryption_key
COMMISSION_SECURITY_KEY=change_this_to_a_random_security_key

# Email Configuration (Optional)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/aureus/app.log

# SECURITY NOTES:
# 1. Never commit .env files to version control
# 2. Use strong, unique passwords and keys
# 3. Set file permissions to 600 (owner read/write only)
# 4. Regularly rotate encryption keys and passwords
# 5. Use environment-specific configurations
